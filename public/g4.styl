@media screen and (min-width: 1024px)
  .about section, .news section
    column(4)

@media screen and (max-width: 1023px)
  .news
    section
      img
        display: none

@media screen and (min-width: 768px) and (max-width: 1023px)
  .rds section, .logo section
    column(12)
  .about 
    section
      p, h2
        column(6)
  .news
    section
      p, h2
        column(6)
  h1
    font-size: $2 rem
  h2
    font-size: $1 + $phi rem
  p, li
    font-size: $0 * (2 - $phi) rem

@media screen and (min-width: 600px) and (max-width: 767px)
  .hero 
    display: none
  .about section, .news section
    column(12)
  .about
    h1
      font-size: $3 rem
  h1
    font-size: $3 rem
  h2
    font-size: $2 + (1 - $phi) rem
  p, li
    font-size: $1 + (1 - $phi) rem

@media screen and (max-width: 599px)
  .hero 
    display: none
  .about section, .news section
    column(12)
  .about
    h1
      font-size: $3 rem
  h1
    font-size: $3 rem
  h2
    font-size: $2 + $phi rem
  p, li
    font-size: $1 + $phi rem