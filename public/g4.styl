// grid
@import grid

// variables
$fontsize = 14pt
$bodypadding = 2rem

$blue = #094FB2
$darkblue = #063373
$bluegray = #5C6573
$gray = #777
$lightgray = #bbb
$white = #fff

$phi = 0.618034
$0 = 1.0
$1 = $phi + $0      // 1.6250
$2 = $0 + $1        // 2.6250
$3 = $1 + $2        // 4.2500
$4 = $2 + $3        // 6.8750

// main
*
  box-sizing: border-box
//  -webkit-transition: all 0.05s linear
//  -moz-transition: all 0.05s linear
//  transition: all 0.05s linear

html
  font: 400 100%/$1 em 'Roboto', sans-serif

body
  margin: 0
  width: 100%
  color: $gray

h1, h2
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

h1
  margin: 0
  padding: 0 0 ($2 rem)
  color: $blue
  font-weight: 400
  font-size: $1 + $phi rem
  line-height: 1.2em

h2
  margin: 0
  padding: 0 0 ($phi rem)
  font-weight: 400
  font-size: $1 rem
  color: $lightgray

ul
  padding: 0

p, li
  margin: 0
  padding: 0 0 ($1 rem)
  font-size: $0 rem
  color: $gray

p
  font-family: georgia, serif

a
  text-decoration: none

img
  max-width: 100%
  width: auto\9
  height: auto
  vertical-align: middle
  border: 0
  -ms-interpolation-mode: bicubic

figure
  margin: 0

// containers
header, footer, body>section
  row(12)
  margin: 0 auto

// clear floats
header:before, header:after, 
footer:before, footer:after, 
body>section:before, body>section:after
  display: table
  content: ""
  line-height: 0

header:after, 
footer:after, 
body>section:after
  clear: both

// header and nav
header
  vertical-align: middle
  padding: (3rem) 0 (1rem)
  section>*
    padding: 0
  h1
    a
      font-weight: 900
      color: $blue
  figure
    width: 18rem

nav
  a
    color: $blue
    &:hover
      color: $darkblue

@media screen and (min-width: 600px)
  header
    h1
      column(4)
  nav
    column(8)
    text-align: right
    li
      display: inline-block
      list-style: none outside none
      padding: 0 ($2 + $phi rem) 0 0
      &:last-child
        padding-right: 0

@media screen and (max-width: 599px)
  header
    h1
      column(12)
  nav
    column(12)
    text-align: left
    li
      display: inline-block
      list-style: none outside none
      padding: 0 0 0 ($3 rem)
      &:first-child
        padding-left: 0

// sections
body>section
  padding: ($2 rem) 0
  h1
    column(12)
    padding-top: $1 rem

// about section
.about 
  h1
    color: $bluegray
    text-align: center
    font-size: 3rem
    line-height: 1.2em
    padding: ($1 rem) 0 ($3 + $phi rem)
    font-weight: 300

// hero section
.hero 
  figure
    column(12)

// directors section
.rds h1
  column(12)

// change later!
.regions-list 
  column(3)

.regions-content
  column(9)

// news section
.news
  section
    img
      margin: 0 0 ($0 rem)

// logo section
.logo
  section
    column(6)

// footer
.container
  background: $bluegray
  padding: ($3 rem) 0
  margin-top: $3 rem

footer
  p
    column(12)
    color: $white
    font-family: inherit
    padding: 0

