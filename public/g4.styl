// grid
@import grid

// variables
$fontsize = 14pt
$bodypadding = 2rem
$blue = #094FB2
$darkblue = #063373
$bluegray = #5C6573
$gray = #777
$lightgray = #ccc

$phi = 0.6250
$0 = 1.0
$1 = $phi + $0      // 1.6250
$2 = $0 + $1        // 2.6250
$3 = $1 + $2        // 4.2500
$4 = $2 + $3        // 6.8750

// font-face
@font-face
  font-family: DINWeb
  src: url("../fonts/DINWeb.woff") format("woff")

@font-face
  font-family: DINWeb-Bold
  src: url("../fonts/DINWeb-Bold.woff") format("woff")

// main
*
  box-sizing: border-box
//  -webkit-transition: all 0.05s linear
//  -moz-transition: all 0.05s linear
//  transition: all 0.05s linear

html
  font: 400 95%/$1 em 'Roboto', sans-serif

body
  margin: 0
  width: 100%
  color: $gray

h1, h2
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

h1
  margin: 0
  padding: 0 0 ($1 rem)
  color: $blue
  font-weight: 500
  font-size: $1 + $phi rem
  line-height: 1.2em

h2
  margin: 0
  padding: 0 0 ($0 rem)
  font-weight: 500
  font-size: $1 rem
  color: $lightgray

p, li
  margin: 0
  padding: 0 0 ($0 rem)
  font-size: $0 rem
  color: $gray

p
  font-family: georgia, serif

img
  max-width: 100%
  width: auto\9
  height: auto
  vertical-align: middle
  border: 0
  -ms-interpolation-mode: bicubic

figure
  margin: 0

// containers
header, footer, body>section
  row(12)
  margin: 0 auto

// clear floats
header:before, header:after, 
footer:before, footer:after, 
body>section:before, body>section:after
  display: table
  content: ""
  line-height: 0

header:after, 
footer:after, 
body>section:after
  clear: both

// header and nav
header
  vertical-align: middle
  padding: (3rem) 0 (1rem)
  section>*
    padding: 0
  h1, figure
    column(6)
  h1
    font-weight: 600
  figure
    width: 18rem

nav
  column(6)
  text-align: right
  li
    font-size: $0 rem
    display: inline-block
    list-style: none outside none
    padding: 0 ($2 rem) 0 0
    &:last-child
      padding-right: 0
  a
    text-decoration: none

// general sections
body>section
  padding: 3em 0
  h1
    column(12)

// about section
.about 
  h1
    color: $bluegray
    text-align: center
    font-size: 3rem
    line-height: 1.2em
    padding: ($0 rem) 0 ($3 rem)
    font-weight: 300

.subheading
  column(4)

.rds h1
  column(12)

.regions-list
  column(3)

.regions-content
  column(9)

// news section
.news-post
  column(4)

.news-post img
  margin: 0 0 ($1 rem)

// logo section
.logo p
  column(6)

.hero figure
  column(12)

// footer
footer p
  column(12)
  font-size: 0.8em
  color: $lightgray
  background: red
  position: relative

footer p:before, footer p:after
  content: "";
  position: absolute;
  background: red;  /* Match the background */
  top: 0;
  bottom: 0;
  width: 9999px;   /* some huge width */

footer p:before
  right: 100%

footer p:after
  left: 100%

// media queries
@media screen and (max-width: 30rem)
  html
    font-size: 84%
@media screen and (min-width: 30rem) and (max-width: 50rem)
  html
    font-size: 84%
@media screen and (min-width: 50rem) and (max-width: 70rem)
  html
    font-size: 90%
@media screen and (min-width: 70rem)
  html
    font-size: 100%