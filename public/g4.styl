// grid
@import grid

// variables
$fontsize = 14pt
$bodypadding = 2rem
$blue = #094FB2
$darkblue = #063373
$bluegray = #5C6573
$gray = #444
$lightgray = #aaa

$phi = 0.6250
$0 = 1.0
$1 = $phi + $0      // 1.6250
$2 = $0 + $1        // 2.6250
$3 = $1 + $2        // 4.2500
$4 = $2 + $3        // 6.8750

// font-face
@font-face
  font-family: DINWeb
  src: url("../fonts/DINWeb.woff") format("woff")

@font-face
  font-family: DINWeb-Bold
  src: url("../fonts/DINWeb-Bold.woff") format("woff")

// main
*
  box-sizing: border-box
  -webkit-transition: all 0.05s linear
  -moz-transition: all 0.05s linear
  transition: all 0.05s linear

html
  font: 400 95%/1.5em DINWeb, sans-serif

body
  margin: 0
  width: 100%
  color: $gray
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

h1
  margin: 0
  padding: 0 0 ($1 rem)
  color: $blue
  font-weight: 400
  font-size: $2 rem
  line-height: 1.2em

h2
  margin: 0
  padding: 0 0 ($0 rem)
  font-weight: 400
  font-size: $1 rem
  color: $lightgray

p, li
  margin: 0
  padding: 0 0 ($0 rem)
  font-size: $0 rem
  color: $gray

img
  max-width: 100%
  width: auto\9
  height: auto
  vertical-align: middle
  border: 0
  -ms-interpolation-mode: bicubic

figure
  margin: 0

// containers
header, footer, section
  row(12)
  margin: 0 auto

// clear floats
header:before, header:after, 
footer:before, footer:after, 
section:before, section:after
  display: table
  content: ""
  line-height: 0

header:after, 
footer:after, 
section:after
  clear: both

// header and nav
header
  vertical-align: middle
  padding: (1rem) 0

header figure, header h1
  column(6)

header figure img
  width: 18rem

header h1
  font-family: DINWeb-Bold

nav
  column(6)
  text-align: right
  font-size: $0 rem
  text-transform: uppercase

nav
  li
    display: inline-block
    list-style: none outside none
    padding-right: $1 rem
    &:last-child
      padding-right: 0

// general sections
section
  padding: 3em 0

section h1
  column(12)

// about section
.about h1
  color: $bluegray
  text-align: center
  font-size: 3rem
  line-height: 1.2em
  padding: ($1 rem) 0 ($3 rem)

.subheading
  column(4)

.rds h1
  column(12)

.regions-list
  column(3)

.regions-content
  column(9)

// news section
.news-post
  column(4)

.news-post img
  margin: 0 0 ($1 rem)

// logo section
.logo p
  column(6)

.hero figure
  column(12)

//@media screen and (max-width: 767px)
//  .subheading, .news-post, .logo p
//    column(12)

// footer
footer p
  column(12)
  font-size: 0.8em
  color: $lightgray

// font-size on media queries
@media screen and (max-width: 480px)
  body
    font-size: $fontsize*0.85
@media screen and (min-width: 481px) and (max-width: 768px)
  body
    font-size: $fontsize*0.9
@media screen and (min-width: 769px) and (max-width: 1024px)
  body
    font-size: $fontsize*0.95
@media screen and (min-width: 1025px)
  body
    font-size: $fontsize