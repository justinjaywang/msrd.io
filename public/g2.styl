@media screen and (min-width: 1124px) and (max-width: 1223px)
  html
    font-size: 92%
@media screen and (min-width: 1224px)
  html
    font-size: 92%

@media screen and (min-width: 1024px)
  .about section, .news section
    column(4)
  .logo
    section
      column(6)

@media screen and (max-width: 1023px)
  .news
    section
      img
        display: none
  .logo
    section
      column(12)

@media screen and (min-width: 768px) and (max-width: 1023px)
  .rds section
    column(12)
  .about 
    section
      p, h2
        column(6)
  .news
    section
      p, h2
        column(6)
  h1
    font-size: $2 rem
  h2
    font-size: $1 + $phi rem
  p, li
    font-size: $0 * (2 - $phi) rem


@media screen and (max-width: 767px)
  .hero 
    display: none
  .about section, .news section
    column(12)

@media screen and (min-width: 600px) and (max-width: 767px)
  .about
    h1
      font-size: $3 rem
  h1
    font-size: $3 rem
  h2
    font-size: $2 + (1 - $phi) rem
  p, li
    font-size: $1 + (1 - $phi) rem

@media screen and (min-width: 500px) and (max-width: 599px)
  .about
    h1
      font-size: $3 rem
  h1
    font-size: $3 rem
  h2
    font-size: $2 + $phi rem
  p, li
    font-size: $1 + $phi rem

@media screen and (max-width: 499px)
  .about
    h1
      font-size: $3 + $phi rem
  h1
    font-size: $3 + $phi rem
  h2
    font-size: $3 rem
  p, li
    font-size: $2 rem