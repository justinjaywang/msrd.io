// grid
@import grid
columns = 12
total-width=100%

// variables
$padding = 2em
$maxwidth = 1200px
$fontsize = 12pt
$bluegray = hsl(215, 20, 45)
$blue = hsl(215, 95, 70)
$darkblue = hsl(215, 95, 45)

$phi = 0.6250
$0 = 1.0
$1 = $phi + $0      // 1.6250
$2 = $0 + $1        // 2.6250
$3 = $1 + $2        // 4.2500
$4 = $2 + $3        // 6.8750

// main
*
  box-sizing: border-box

body
  max-width: $maxwidth
  margin: 0 auto
  padding: 0 $padding
  font-size: $fontsize
  font-family: 'helvetica neue', 'Roboto', 'Open Sans', sans-serif
  -webkit-font-smoothing: antialiased
  font-smoothing: antialiased
  text-rendering: optimizeLegibility

h1 
  font-weight: 500
  color: $bluegray
  margin: 0 0 1em

h2
  font-weight: 500
  padding: 0 0 1em

p
  padding: 0 0 1em

header, footer, section
  row(12)

img
  max-width: 100%
  width: auto\9
  height: auto
  vertical-align: middle
  border: 0
  -ms-interpolation-mode: bicubic

// header and nav
header
  margin-top: 1em
  margin-bottom: 1em
  vertical-align: middle

header figure, header h1
  column(6)

nav
  column(6)
  text-align: right

nav
  li
    display: inline-block
    list-style: none outside none
    padding-right: 1em
    &:last-child
      padding-right: 0

// sections
section
  padding: 0 0 3em

section:before, section:after
  display: table
  content: ""
  line-height: 0

section:after
  clear: both

section h1
  column(12)

.about h1
  text-align: center
  padding: 1.5em 0

.about p
  column(4)

.rds h1
  column(12)

.regions-list
  column(3)

.regions-content
  column(9)

.news-post
  column(4)

.logo p
  column(6)

.hero figure
  column(12)

@media screen and (max-width: 767px)
  .about p, .news-post, .logo p
    column(12)

// footer
footer p
  column(12)

